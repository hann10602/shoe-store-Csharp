@page
@model ShoeStore.Pages.Home.IndexModel
@{
}

<div>
    <div id="header">
        <div>
            <img src="./static/image/head-image.png" alt="carousel1" style="width:100%; object-fit: cover; height: 600px">
        </div>
    </div>
    <div class="container">
        <h1 style="margin:40px 0 20px">Sản phẩm:</h1>
        <div class="product-list">
            @foreach (var item in Model.shoeList)
            {
                <div class="product">
                    <img class="product-image" src="@item.Thumbnail" alt="@item.Name" />
                    <div class="product-detail">
                        <div style="width:100%;text-align:center; font-size:20px">
                            <b>@item.Name</b>
                        </div>
                        <div style="margin:12px 0 24px">
                            <p style="height:12px">Số lượng: @item.Quantity</p>
                            <p style="height:12px">Màu: @item.Color</p>
                            <p style="height:12px">Kích cỡ: @item.Size</p>
                        </div>
                        <div style="display:flex;justify-content:center;">
                            <a style="width:100px;font-weight:500;text-align:center;color:black;padding:4px 4px;text-decoration:none;background-color: lightgreen; border-radius: 4px" href="/Admin/Shoe/Update?Id=@item.Id">Mua</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
