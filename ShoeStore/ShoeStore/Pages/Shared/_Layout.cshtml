<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoAnCongNgheWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoAnCongNgheWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow" style="height: 70px">
            <div class="header">
                <div class="header-left">
                    <a class="navbar-brand" style="margin-right:40px" asp-area="" asp-page="/Index">
                        <img class="rounded-2" src="./static/image/logo.png" alt="logo" style="width:50px; object-fit: cover; height: 50px" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/home">
                                    <b>Home</b>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/home?category=men">
                                    <b>Men</b>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/home?category=women">
                                    <b>Women</b>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/home?category=kid">
                                    <b>Kid</b>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <form class="header-right" method="post" action="/home">
                    <div class="search-bar">
                        <i class="fa fa-search"></i>
                        <input type="text" name="search" style="width:100%;height:16px;outline:none;border:none;"/>
                    </div>
                    <button type="submit" style="margin-left:12px;width:50px;height:20px;background-color:black;color:white;font-size:12px;border-radius:40px">Search</button>
                </form>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div style="display:flex;justify-content:space-between;padding: 30px 150px 60px;">
            <div class="footer-content">
                <h3 style="margin-bottom:20px">Shop</h3>
                <a href="/index"><p>Home</p></a>
                <a href="/home?category=men"><p>Men</p></a>
                <a href="/home?category=women"><p>Women</p></a>
                <a href="/home?category=kid"><p>Kid</p></a>
            </div>
            <div class="footer-content">
                <h3 style="margin-bottom:20px">Contact</h3>
                <a href="/index"><p>Địa chỉ: Nguyễn Trãi - Thanh Xuân</p></a>
                <a href="/index"><p>Giờ làm việc:</p></a>
                <a href="/index"><p>(Mon - Fri) 6am - 4pm PST (Sat - Sun) 6:30am - 3pm</p></a>
            </div>
            <div class="footer-content">
                <h3 style="margin-bottom:20px">Social</h3>
                <a href="https://www.facebook.com/"><p>Facebook</p></a>
                <a href="https://www.instagram.com/"><p>Instagram</p></a>
            </div>
        </div>
        <div style="border-top:solid white 1px">
            &copy; 2023 - DoAnCongNgheWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>